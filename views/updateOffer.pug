doctype html
html(lang='en')
  include ./head.pug
  body
    header
      h1 
        a(href='/') Job Finder
      #logContainer
        h4
          a(href='/profile') Perfil
        h4
          a(href='/favorites') Favoritos 
        h4
          a(href='/') Ofertas aplicadas
        h4
          a(href='/api/users') Usuarios
        h4
          a(href='api/dashboard') Tablón
        h4
          button.clickBtnlogOut.logoutBtn(href='/api/logout') Salir
    main
      div#h2SignUpContainer
        h2#h2SignUp Editar Oferta
        div#signUpFormContainer
          form#offerUpdate(action="/api/ads/update" method="POST")
            label(for="") id: 
            input#id(type="number" name="id" value=offer[0].id)
            label(for="") Título de oferta:  
            input#title(type="text" name="proyect_name" value=offer[0].proyect_name)
            label(for="") Fecha:  
            input#date(type="text" name="published" value=offer[0].published)
            label(for="") Budget:  
            input#budget(type="number" name="budget" value=offer[0].budget)
            label(for="") Descripción:  
            input#description(type="text" name="description" value=offer[0].description) 
            button#updateBtn(type="submit" value="Search") Actualizar oferta
    script(type='text/javascript', src='../scripts/homeNavigation.js')
include ./footer.pug