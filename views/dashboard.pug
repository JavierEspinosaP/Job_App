doctype html
html(lang='en')
  include ./head.pug
  body
    header
      h1 
        a(href='/') Job Finder
      #logContainer
        h4
          a(href='/profile') profile
        h4
          a(href='/favorites') favorites 
        h4
          a(href='/') Ofertas aplicadas
          //- Solo visibles par aadministrador
        h4
          a(href='/api/users') users(admin)
        h4
          a(href='/dashboard') dashboard(admin)
          //----------------------------------
        h4
          a(href='/api/logout') Logout
    main
      div#mainContainer
        h1#h1Slogan DASHBOARD (ADMIN)
        h3#h3Slogan
          |Publicar una oferta
        div#signUpFormContainer
          form#offerCreate(action="/api/ads/create" method="POST") 
            label(for="") id: 
            input#id(type="number" name="id")
            label(for="") Título de oferta:  
            input#title(type="text" name="title")
            label(for="") Fecha:  
            input#date(type="text" name="date")
            label(for="") Presupuesto:  
            input#budget(type="number" name="budget")
            label(for="") Descripción:  
            input#description(type="text" name="description") 
            button#createBtn(type="submit" value="Search") Crear oferta
        h3#h3Slogan
          | Listado de todas las ofertas creadas por el Admin
        .offers
          each offer in {offers}
            .offer
            -for(let i=0;i<offers.length; i++)
              hr
              p= offer[i].id
              h2= offer[i].title
              p= offer[i].date
              h3= offer[i].budget
              p= offer[i].description
              -var url=offer[i].id;
              h4
                a(href='api/ads/open/'+url) Abrir
              h4
                a(href='api/ads/update/'+url) Editar
              h4
                a(href='api/ads/delete/'+url) Borrar
          else 
            p no values
    script(type='text/javascript', src='../scripts/homeNavigation.js')
include ./footer.pug