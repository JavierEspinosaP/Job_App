doctype html
html(lang='en')
  include ./head.pug
  body
    header
      div.headerDash
        h1 
          a(href='/') Job Finder
        #logContainer
        div.logContainer
          h4
            a(href='/profile') Perfil
          h4
            a(href='/favorites') Favoritos 
          h4
            a(href='/') Ofertas aplicadas
          h4
            a(href='/api/users') Usuarios
          h4
            a(href='/dashboard') Tablón
            //----------------------------------
          h4
            a(href='/api/logout') Salir
    main
      div#mainContainer
        h1#h1Slogan Tablón
        h3#h3Slogan
          |Publicar nueva oferta
        div#signUpFormContainer
          form.marcoForm#offerCreate(action="/api/ads/create" method="POST") 
            label.labelOffer(for="") id: 
            input.searchInputOffer#id(type="number" name="id" placeholder="Añade una ID")
            label.labelOffer(for="") Título de oferta:  
            input.searchInputOffer#title(type="text" name="title" placeholder="Nombre de la oferta")
            label.labelOffer(for="") Fecha:  
            input.searchInputOffer#date(type="text" name="date" placeholder="Fecha de publicación")
            label.labelOffer(for="") Salario:  
            input.searchInputOffer#budget(type="number" name="budget" placeholder="Salario estimado")
            label.labelOffer(for="") Descripción:  
            input.searchInputOffer#description(type="text" name="description" placeholder="Descripción de la oferta") 
            button#createBtn.clickBtn(type="submit" value="Search") Crear oferta
        h3#h3Slogan
          | Listado de todas las ofertas creadas:
        .offers
          each offer in {offers}
            .offer
            -for(let i=0;i<offers.length; i++)
              div.bot-left.offerCard.offerCardContainer#offerDiv
                p.pOffer= offer[i].id
                h2.h2Offer= offer[i].title
                p.pOffer= offer[i].date
                h3.h3Offer= offer[i].budget
                p.pOffer= offer[i].description
                -var url=offer[i].id;
                div.offerOptions
                  h4
                    a(href='api/ads/open/'+url) Ver oferta completa
                  h4
                    a(href='api/ads/update/'+url) Editar
                  h4
                    a(href='api/ads/delete/'+url) Borrar
          else 
            p no values

    script(type='text/javascript', src='../scripts/homeNavigation.js')
include ./footer.pug