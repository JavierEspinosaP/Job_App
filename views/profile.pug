doctype html
html(lang='en')
  include ./head.pug
  body
    header
      div.headerDash
        h1 
          a(href='/') Job Finder
        #logContainer
        div.logContainer
          h4
            a(href='/profile') Perfil
          h4
            a(href='/favorites') Favoritos 
          h4
            a(href='/') Ofertas aplicadas
          h4
            a(href='/api/users') Usuarios
          h4
            a(href='/dashboard') Tabl√≥n
          form(action="/api/logout" method="post")
            button.clickBtnlogOut.logoutBtn(type="submit") Salir
    main
      div#mainContainer
        h1#h1Slogan Perfil de #{data[0].email}
        h3#h3Slogan
          | Modifica tu perfil
        form.editUserForm(action="/profile" method="POST")
          div#editUserDiv
            label Nombre:
            input.editName.searchInputSign(type='text' value=data[0].name name='name')
            label Apellido:
            input.editSurname.searchInputSign(type='text' value=data[0].surname name='surname')
            input(type='hidden' value=data[0].email name='email')
            button.editUser.btnClass.backBtn(type="submit") Editar perfil
    script(type='text/javascript', src='../scripts/homeNavigation.js')
include ./footer.pug