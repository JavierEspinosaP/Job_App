doctype html
html(lang='en')
  include ./head.pug
  body
    header
      h1 
        a(href='/') Job Finder
      #logContainer
        h4
          a(href='/profile') profile
        h4
          a(href='/favorites') favorites 
        h4
          a(href='/') Ofertas aplicadas
          //- Solo visibles par aadministrador
        h4
          a(href='/users') users(admin)
        h4
          a(href='/dashboard') dashboard(admin)
          //----------------------------------
        h4
          a(href='/api/logout') Logout
    main
      div#mainContainer
        h1#h1Slogan ADS (ADMIN)
        h3#h3Slogan
          | Listado de todas las ofertas creadas por el Admin 
        .offers
          each offer in {offers}
            .offer
            -for(let i=0;i<offers.length; i++)
              hr
              h2= offer[i].title
              h3= offer[i].company
              p= offer[i].date
              h3= offer[i].location
              p= offer[i].company
              p oli#{offer[i].id}oli
              -var url=offer[i]._id;
              h4
                a(href='/ads/update/'+url) Editar
          else 
            p no values
    script(type='text/javascript', src='../scripts/homeNavigation.js')
include ./footer.pug