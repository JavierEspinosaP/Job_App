        .offers
          each offer in {offers}
            .offer
            -for(let i=0;i<offers.length; i++)
              hr
              h2.h2Offer= offer[i].title
              h3.h3Offer= offer[i].company
              p.pOffer= offer[i].date
              h3= offer[i].location
              p.pOffer= offer[i].company
              p.pOffer= offer[i].id
              -var url=offer[i].id;
              h4
                a(href='./ads/update/'+url) Editar
              h4
                a(href='./ads/delete/'+url) Borrar
          else 
            p no values
    script(type='text/javascript', src='../scripts/homeNavigation.js')
