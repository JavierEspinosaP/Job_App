        .offers
          each offer in {offers}
            .offer
            -for(let i=0;i<offers.length; i++)
              hr
              h2= offer[i].title
              h3= offer[i].company
              p= offer[i].date
              h3= offer[i].location
              p= offer[i].company
              p= offer[i].id
              -var url=offer[i].id;
              h4
                a(href='./ads/update/'+url) Editar
              h4
                a(href='./ads/delete/'+url) Borrar
          else 
            p no values
